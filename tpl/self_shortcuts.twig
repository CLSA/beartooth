{% extends "widget.twig" %}
{% block widget %}
<script type="text/javascript">
// make button icons
$( function() {
  $( "#{{ widget.full }}_prev" ).button( {
    text: false,
    icons: {
      primary: "ui-icon-arrowthick-1-w"
    }
  } )
} );
$( function() {
  $( "#{{ widget.full }}_next" ).button( {
    text: false,
    icons: {
      primary: "ui-icon-arrowthick-1-e"
    }
  } )
} );
$( function() {
  $( "#{{ widget.full }}_refresh" ).button( {
    text: false,
    icons: {
      primary: "ui-icon-arrowrefresh-1-e"
    }
  } )
} );
$( function() {
  $( "#{{ widget.full }}_home" ).button( {
    text: false,
    icons: {
      primary: "ui-icon-home"
    }
  } )
} );
$( function() {
  $( "#{{ widget.full }}_help" ).button( {
    text: false,
    icons: {
      primary: "ui-icon-help"
    }
  } )
} );

// page button functions
$( function() {
  $( "#{{ widget.full }}_prev" ).click( function() {
    slot_prev( 'main' );
  } )
} );
$( function() {
  $( "#{{ widget.full }}_next" ).click( function() {
    slot_next( 'main' );
  } )
} );
$( function() {
  $( "#{{ widget.full }}_refresh" ).click( function() {
    slot_refresh( 'main' );
  } )
} );
$( function() {
  $( "#{{ widget.full }}_home" ).click( function() {
    slot_load( 'main', 'self_home' );
  } )
} );
$( function() {
  $( "#{{ widget.full }}_help" ).click( function() {
    //slot_load( 'main', 'help' ); TODO
  } )
} );
</script>
<span>
  <button id="{{ widget.full }}_prev">back</button>
  <button id="{{ widget.full }}_next">forward</button>
  <button id="{{ widget.full }}_refresh">refresh</button>
  <button id="{{ widget.full }}_home">home</button>
  <button id="{{ widget.full }}_help">help</button>
</span>
{% endblock %}
