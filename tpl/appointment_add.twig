{% extends "base_add.twig" %}

{% block javascript %}

  <script type="text/javascript">
    $( function () {
      // by default start by hiding the home calendar
      //$( "#home_calendar_header" ).hide();
      //$( "#home_calendar_calendar" ).hide();

      // show the right calendar (home or site)
      $( "#{{ widget.full }}__address_id" ).change( function() {
        if( '' == $(this).val() ) // site value is an empty string
        {
          $( "#home_calendar_header" ).hide();
          $( "#home_calendar_calendar" ).hide();
          $( "#site_calendar_header" ).show();
          $( "#site_calendar_calendar" ).show();
        }
        else
        {
          $( "#site_calendar_header" ).hide();
          $( "#site_calendar_calendar" ).hide();
          $( "#home_calendar_header" ).show();
          $( "#home_calendar_calendar" ).show();
        }
      } );

      // add button
      $( "#{{ widget.compound }}_add" ).click( function () {
        // push the form information
        var args = new Object();
        var columns = new Object();
        $( "#{{ widget.full }}_add_form :input" ).each( function() {
          var id_string = $(this).attr( "id" );
          var column_name = id_string.substring( id_string.lastIndexOf('__') + 2 );
          if( "checkbox" != $(this).attr( "type" ) )
            columns[column_name] = $(this).val();
          else args.force = $(this).is( ":checked" ) ? 1 : 0;
        } );
        args.columns = columns;
    
        if( ajax_push( "{{ widget.subject }}", "new", args ) ) slot_prev( {{ slot }} );
      } );
    } );
  </script>

{% endblock javascript %}

{% block record_items %}
  {{ parent() }}
  {% if is_coordinator %}
    <hr class="ui-widget ui-widget-content">
    <table>
      <tr id="{{widget.full }}__force_row">
        <td class="heading">Force appointment:</td>
        <td class="content">
          <input id="{{ widget.full }}__force" type="checkbox" />
        </td>  
      </tr>
    </table>
  {% endif %}  
{% endblock record_items %}

{% block record %}
  
  {{ parent() }}
  {% from 'macros.twig' import include_calendar %}
  {{ include_calendar( 'site', site_calendar|default(false), true ) }}
  {{ include_calendar( 'home', home_calendar|default(false), true ) }}

  <script type="text/javascript">
    $( function () {
      // by default start by hiding the home calendar
      $( "#home_calendar_header" ).hide();
      $( "#home_calendar_calendar" ).hide();
    } );
  </script>
{% endblock record %}
