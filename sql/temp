SET AUTOCOMMIT=0 ;

-- define the interview queues

UPDATE queue set description = 
"<div class='title'>Participants with missed appointments.</div>
<div>This list is generated by searching for all participants who have appointments in the past but
were never reached by an operator." where id = 1;

UPDATE queue set description = 
"<div class='title'>Participants with an upcomming appointment.</div>
<div>This list is generated by searching for all participants which have appointments in the future
(whether they have been assigned to an operator in the past or not)." where id = 2;

UPDATE queue set description = 
"<div class='title'>Participants with specific availability.</div>
<div>This list is generated by searching for all participants who have been assigned in the past and
which have one or more specific availability times." where id = 3;

UPDATE queue set description = 
"<div class='title'>Participants who's previous call resulted in a busy signal.</div>
<div>This status is associated with a callback delay time.  Once the delay time has been reached the
participant will be included in this queue.  Furthermore, if this call status reaches a defined
limit then the participant is removed from this queue." where id = 4;

UPDATE queue set description = 
"<div class='title'>Participants who's previous call was answered by a fax machine.</div>
<div>This status is associated with a callback delay time.  Once the delay time has been reached the
participant will be included in this queue.  Furthermore, if this call status reaches a defined
limit then the participant is removed from this queue." where id = 5;

UPDATE queue set description = 
"<div class='title'>Participants who's previous call was not answered.</div>
<div>This status is associated with a callback delay time.  Once the delay time has been reached the
participant will be included in this queue.  Furthermore, if this call status reaches a defined
limit then the participant is removed from this queue." where id = 6;

UPDATE queue set description = 
"<div class='title'>Participants who's previous call was answered by a machine and a message was
left.</div>
<div>This status is associated with a callback delay time.  Once the delay time has been reached the
participant will be included in this queue.  Furthermore, if this call status reaches a defined
limit then the participant is removed from this queue." where id = 7;

UPDATE queue set description = 
"<div class='title'>Participants who's previous call was answered by a machine and a message was NOT
left.</div>
<div>This status is associated with a callback delay time.  Once the delay time has been reached the
participant will be included in this queue.  Furthermore, if this call status reaches a defined
limit then the participant is removed from this queue." where id = 8;

UPDATE queue set description = 
"<div class='title'>Participants who have not yet been contacted and have availability times.</div>
<div>This list is generated by searching for all participants who have never been assigned to an
operator. And who have at least one availability entry." where id = 9;

UPDATE queue set description = 
"<div class='title'>Participants who have not yet been contacted.</div>
<div>This list is generated by searching for all participants who have never been assigned to an
operator.  This list does not include participants with availability times." where id = 10;

COMMIT ;
